@if (Visible)
{
    <div class="d-flex justify-content-center">
        <i class="fa fa-spinner fa-pulse fa-lg"></i>
        <strong class="text-light">@Text</strong>
    </div>
}

@code{
    [Parameter]
    public bool Visible
    {
        get; set;
    }

    [Parameter]
    public string Text { get; set; } = "Loading...";
}