@inject StateContainer stateContainer;
@inject IJSRuntime JS; 
 
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <ul>
        <li><a>GENRE</a></li>
        <li>
            <ul style="margin-left:20px; list-style: none;">
                @foreach (var tag in Tags)
                {
                    <li><a href="#" @onclick="@(e=> { FilterStation(tag); })" data-tag="@tag">@tag.ToLower()</a></li>
                }
            </ul>
        </li>
    </ul>

</div>

@code{

    List<string> Tags = new List<string> {
    "all",
    "classical",
    "country",
    "dance",
    "disco",
    "house",
    "jazz",
    "pop",
    "rap",
    "retro",
    "rock",
    };

    private void FilterStation(string tag)
    {
        stateContainer.SelectedTag = tag;
        JS.InvokeVoidAsync("closeNav");
    }
}